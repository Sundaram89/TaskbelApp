<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#FFB600"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_24" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle1"
                android:padding="7dp"
                android:src="@drawable/userpic" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Welcome to, Taskbell !"
            android:textColor="#022279"
            android:textFontWeight="600"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="90dp"
            android:fontFamily="@font/roboto_medium"
            android:text=" Choose the laundary service which, you are interested in today. !"
            android:textColor="#022279"
            android:textFontWeight="400"
            android:textSize="14dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            tools:listitem=""
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Promotions"
        android:textSize="16dp"
        android:textFontWeight="600"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="20dp">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#9FE4D6">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textFontWeight="600"
                android:textSize="14dp"
                android:layout_marginStart="20dp"
                android:text="Get 40% on Ironing
Code : IRON40"
                android:fontFamily="@font/roboto_medium"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textFontWeight="600"
                android:textSize="14dp"
                android:text="Book Now"
                android:textAllCaps="false"
                android:padding="5dp"
                android:textColor="#022279"
                android:background="@drawable/bg_corner"
                android:backgroundTint="#FFB600"/>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/logocard"/>

    </LinearLayout>



    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Top Rated Member"
        android:textSize="16dp"
        android:textFontWeight="600"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="20dp">

    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/call_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:scrollbars="vertical"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="20dp"
        tools:listitem="@layout/topratedmember"
        android:layout_marginEnd="20dp"/>




</LinearLayout>


